#!/bin/sh
########################################################################
# rbu: Backup to the rsync.net
########################################################################
# Following needs to be adjusted
RSYNC_ACCOUNT="ab1234@ab1234.rsync.net"
RSYNC_DIR="rsync"
# This backup contents in ~/$RSYNC_DIR/ to remote host
echo "I: Local backup started"
echo "---luksimg  START -----------------------------------"
luksimg -r "$RSYNC_DIR" -s "secret" all
echo "---luksimg  END -----------------------------------"
ls -lA ~/rsync/
echo "--- bss copy START -----------------------------------"
bss -v copy ~/"$RSYNC_DIR" "$RSYNC_ACCOUNT:$RSYNC_DIR"
echo "--- bss copy END -----------------------------------"
ssh "$RSYNC_ACCOUNT" ls -lA "$RSYNC_DIR"
echo "I: All backup end"
